/**********************
Calendar
*/
.calendar-img,
.feature-img,
.calendar
    display: block
    width: 100%
    max-width: 450px
    margin: 0 auto
    user-select: none


.calendar-img,
.feature-img
    color: transparent


.feature-img
    margin-top: -2rem


.calendar-title
    text-align: center
    font-size: 1rem


.activity-title
    text-align: center
    margin: 0


.activity-info
    margin: 2rem 0 0
    padding: 0.2rem 1rem 0.5rem
    text-align: center
    display: block
    opacity: 0.4
    font-size: 1rem
    line-height: 1.5rem
    // font-style: italic
    // font-weight: 300;


.calendar-main
    box-shadow: $calendar-box-shadow
    border-radius: .15rem
    overflow: hidden
    letter-spacing: 0.05rem
    position: relative
    user-select: none

.calendar-year
    font-size: 1.125rem

.month
    padding: 12px 15px
    width: 100%
    position: absolute
    text-align: center

.month ul
    margin: 0
    padding: 0

.month ul li
    color: $calendar-month-color
    font-size: 1.25rem
    text-transform: uppercase
    letter-spacing: 0.1875rem
    cursor: pointer

.month .prev,
.month .next
    width: 2.4rem
    height: 2.4rem
    border-radius: 50%
    line-height: 2.4rem
    text-align: center
    cursor: pointer
    box-shadow: $calendar-prev-next-box-shadow


.month .prev
    float: left


.month .next
    float: right
    padding-left: .3rem


.weekdays
    margin: 0
    padding: 10px 0


.weekdays li
    display: inline-block
    width: 13.6%
    color: $calendar-weekdays-color
    text-align: center


.days
    padding: 1.35rem 0 .8rem 0
    min-height: 233px
    margin: 0
    background-color: $calendar-days-bg-c
    background: $calendar-days-bg-g


.dayItem
    list-style-type: none
    display: inline-block
    width: 13.6%
    text-align: center
    margin-bottom: 5px
    font-size:0.87rem
    color: $calendar-day-color
    padding: 0


.day
    width: 2rem
    height: 2rem
    line-height: 2rem
    display: inline-block
    border-radius: 50%
    cursor: pointer
    position: relative


.dayItem:hover .day,
.dayItem:active .day,
.day.active
    box-shadow: $calendar-day-active-box-shadow
    color: $calendar-day-active-color


/* .dayItem:hover .day.active,
.dayItem:active .day.active, */
.day.inactive,
.dayItem:hover .day.inactive,
.dayItem:active .day.inactive
    background: $calendar-day-inactive-bg-c
    color: $calendar-day-inactive-color
    box-shadow: $calendar-day-inactive-box-shadow


.dayItem:hover .day.inactive:before
    content: "âœ˜"
    position: absolute
    text-align: center
    color: $calendar-day-delete-color
    font-size: 1.7rem
    line-height: 1.7rem
    font-weight: 100
    width: 100%
    height: 100%
    text-align: center
    top: 0
    left: 0


.day.today
    border: .1rem solid rgb(0, 188, 212)
    line-height: 1.8rem

.star-icon
    font-size: 2rem
    display: block
    line-height: 2.5rem
    font-style: normal

.coffee-icon
    font-size: 3rem

