/******************
List Activities
*/

.activity-item
    white-space: normal !important
    /* line-height: 1.5rem !important */
    text-align: left


.activity-item a
    display: block


// Set Drawer in front of drop-down menu
// On mobile do cross eachother
.list-activities :nth-child(1)
    z-index: 12000 !important
.list-activities :nth-child(2)
    z-index: 13000 !important


.list-activities-title
    // background-color: #fff
    font-weight: normal


.list-activities div:first-of-type > .activity-item
    background-color: $list-activities-first-bg-c
    color: $list-activities-first-c


.list-activities div:first-of-type > .activity-item svg
    fill: $list-activities-first-c

.list-activities-add-btn
        display: block !important

/*********************
 Add Activity
*/

.add-activity
    color: $add-activity-color
    line-height: 5.5rem
    display: inline-block
    margin-left: -0.3rem
    vertical-align: top
    text-transform: uppercase
    font-size: .9rem
    letter-spacing: 0.03rem


.add-activity-form,
.add-day-form
    padding: 1rem


.activity-menu-link
    font-size: 1.3rem !important
    vertical-align: top
    //color: rgb(158,158,158)
    //color: $accent-color
    color: alpha($dark-color, 0.3)
    text-align: center
    width: 42px !important
    height: 42px !important
    margin-bottom: 0.1rem !important


.activity-menu-link svg
    //color: $accent-color !important
    color: alpha($dark-color, 0.3) !important

.activity-menu-link.help-link
    color: alpha($accent-color, 0.9)

.list-activities-none
    display: block
    text-align: center
