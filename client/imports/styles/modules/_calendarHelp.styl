.help-parent
    position: relative


.help,
.days :nth-child(23) .help-parent:before
    position: absolute
    display:inline-block
    left: 130%
    top: 0
    background-color: alpha($dark-color, 0.3)
    color: $light-color
    min-width: 210px
    text-align: left
    z-index: 1
    padding-left: 5px
    border-radius: 3px
    box-shadow: $calendar-box-shadow


.days :nth-child(23) .help-parent:before
    content: '◂ Click 3  ✘  Remove Day'

.help-menu-info {
    opacity: 0.5
}
