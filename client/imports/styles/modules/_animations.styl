/* Page Animations */

.page-enter
  /*  opacity: 0 */
  transform: translateY(-4rem)
  z-index: 1


.page-enter.page-enter-active
  /* opacity: 1 */
  transform: none
  transition: all 300ms ease-out


.page-leave
  display: none
  /*  opacity: 1 */
  transform: none


.page-leave.page-leave-active
  display: none
  /*  opacity: 0 */
  transform: translateY(-4rem)
  transition: all 300ms ease-out
  z-index: 1


.page-appear
  /*  opacity: 0 */
  transform: translateY(-4rem)
  z-index: 1


.page-appear.page-appear-active
  /* opacity: 1 */
  transform: none
  transition: all 300ms ease-out
