*,html, :before, :after
    box-sizing:border-box

body
    padding: 3rem 0 0 !important
    margin: 0
    font-family: $body-font-family
    font-size: 1.1rem

ul
    list-style-type: none

.sr-only
    position: absolute
    display: block
    overflow: hidden
    width: 0
    height: 0
    left: -200rem
    top: -200rem

.title
    text-align: center



/*********************
 Content
*/

.content
    width: 100%
    max-width: 28.125rem
    margin: 0 auto


.btn
    border-radius: 10rem !important
    overflow: hidden !important
    margin: 1rem 1rem 1rem 0
    font-size: 0.8rem

.reset-btn
    opacity: 0.8
    color: rgba(0,0,0, 0.35) !important

.reset-btn button span
    color: rgba(0,0,0, 0.35) !important

.btn button
    min-width: 9.5rem


.noselect
    user-select: none


.errorMsg > *
    background-color: $error-bg-c
    text-align: center


.successMsg > *
    text-align: center


/* links */

a
    text-decoration: none
    color: inherit
